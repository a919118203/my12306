<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/cpyd4_ddph"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单提交成功，您的订单编号为：20143Yt"
        android:textColor="#000000"
        android:textSize="15sp"/>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您可以现在支付，或暂不支付，待返回后在订单中支付！"
        android:textSize="15sp"
        android:textColor="#f1b53e"/>
    <ListView
        android:id="@+id/cpyd4_lv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="370dp"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bt_zbzhifu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂不支付"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#00aacc" />

        <TextView
            android:id="@+id/bt_xzzhifu"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="现在支付"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#f1b53e"/>
    </LinearLayout>
</LinearLayout>