<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_startcity"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成都"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_starttime"
        android:layout_below="@+id/tv_startcity"
        android:layout_alignLeft="@+id/tv_startcity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07:05"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/tv_cci"
        android:layout_toRightOf="@+id/tv_starttime"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="5D"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/image_to"
        android:layout_below="@+id/tv_cci"
        android:layout_alignLeft="@+id/tv_cci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/to"/>

    <TextView
        android:id="@+id/tv_endriqi"
        android:layout_below="@+id/image_to"
        android:layout_alignLeft="@+id/image_to"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="2014-7-1(0日)"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_endcity"
        android:layout_toRightOf="@+id/image_to"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拉萨"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_below="@+id/tv_endcity"
        android:layout_alignLeft="@+id/tv_endcity"
        android:id="@+id/tv_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:55"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/tv_zw"
        android:layout_below="@+id/tv_starttime"
        android:layout_alignLeft="@+id/tv_starttime"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无座(39张)"
        android:textColor="#000000"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_jiaqian"
        android:layout_below="@+id/tv_endtime"
        android:layout_alignRight="@+id/tv_endtime"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥154.0"
        android:textSize="17sp"
        android:textColor="#f1b53e"/>

    <TextView
        android:id="@+id/cpyd3_bt_tianjia"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#c9c9c9"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="添加联系人"
        android:layout_below="@+id/tv_zw"
        android:layout_alignLeft="@+id/tv_zw"
        android:layout_alignRight="@+id/tv_jiaqian"
        android:textSize="17sp"
        android:textColor="#f1b53e"/>

    <ListView
        android:id="@+id/cpyd3_lv"
        android:layout_below="@+id/cpyd3_bt_tianjia"
        android:layout_alignLeft="@+id/cpyd3_bt_tianjia"
        android:layout_alignRight="@+id/cpyd3_bt_tianjia"
        android:layout_width="wrap_content"
        android:layout_height="250dp"/>

    <LinearLayout
        android:layout_below="@+id/cpyd3_lv"
        android:layout_alignLeft="@+id/cpyd3_lv"
        android:layout_alignRight="@+id/cpyd3_lv"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zonge"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="7"
            android:background="#00aacc"
            android:gravity="center_vertical"
            android:text="订单总额：￥0元"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bt_tijiao"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:text="提交"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="#f1b53e"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>