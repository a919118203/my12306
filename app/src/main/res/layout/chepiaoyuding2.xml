<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/cpyd2_bt_qyt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00aacc"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="前一天" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="#d9f7f7">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/cpyd2_tv_riqiofcpyd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-08-17 周四"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/cpyd2_tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="成都->拉萨" />
        </LinearLayout>

        <TextView
            android:id="@+id/cpyd2_bt_hyt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00aacc"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="后一天" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cpyd2_tv_cxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D5"
            android:textSize="40sp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/cpyd2_tv_shijian"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:05 - 11:55,历时4小时50分"
            android:textSize="20sp"
            android:gravity="bottom"/>
    </LinearLayout>
    <ListView
        android:id="@+id/cpyd2_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>