<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/cpyd3_lxr_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:id="@+id/cpyd3_lxr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cpyd3_lxr_checkbox"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/cpyd3_lxr_idcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpyd3_lxr_name"
        android:layout_alignLeft="@+id/cpyd3_lxr_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/cpyd3_lxr_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpyd3_lxr_idcard"
        android:layout_alignLeft="@+id/cpyd3_lxr_idcard"
        android:text="TextView" />

    <ImageView
        android:id="@+id/cpyd3_lxr_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/forward_25" />
</RelativeLayout>