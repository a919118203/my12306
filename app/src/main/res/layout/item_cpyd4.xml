<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/cpyd4_lv_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="冬不拉"
        android:textColor="#000000"
        android:textSize="20sp"/>

    <TextView
        android:layout_marginLeft="150dp"
        android:id="@+id/cpyd4_lv_cci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D5"
        android:textColor="#000000"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/cpyd4_lv_riqi"
        android:layout_below="@+id/cpyd4_lv_cci"
        android:layout_alignLeft="@+id/cpyd4_lv_cci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2014-7-1"/>

    <TextView
        android:id="@+id/cpyd4_lv_wz"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6车51号"
        android:textColor="#000000"
        android:textSize="20sp"/>
