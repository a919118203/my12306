<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/cpyd1_bt_qyt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00aacc"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="前一天" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="#d9f7f7">

            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/cpyd1_tv_riqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-08-17"
                android:textColor="#000000"
                android:gravity="center"/>

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/cpyd1_tv_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="成都->拉萨" />
        </LinearLayout>

        <TextView
            android:id="@+id/cpud1_bt_hyt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00aacc"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="后一天" />
    </LinearLayout>

    <ListView
        android:id="@+id/cpyd1_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>